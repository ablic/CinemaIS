@model IEnumerable<CinemaIS.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <a asp-action="Details" asp-route-id="@movie.Id">
                <div class="card text-center h-100">
                    <img src="https://via.placeholder.com/300x400" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Name</h5>
                        <a asp-action="Edit" asp-route-id="@movie.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@movie.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                    </div>
                </div>
            </a>
        </div>
    }
</div>