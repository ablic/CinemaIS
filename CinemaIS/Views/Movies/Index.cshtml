@model IEnumerable<CinemaIS.Models.Movie>

@{
    ViewData["Title"] = "Афиша";
}

<h1>Сегодня в кино:</h1>

@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <a asp-action="Details" asp-route-id="@movie.Id">
                <div class="card text-center h-100">
                    <img src="@("~/images/" + movie.PosterUrl)" asp-append-version="true" class="card-img-top movie-poster" alt="@movie.Name">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Name</h5>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                            <span>|</span>
                            <a asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                        }
                    </div>
                </div>
            </a>
        </div>
    }
</div>