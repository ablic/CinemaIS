@model CinemaIS.Models.Session

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HallNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallNumber)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Ряд
                </th>
                <th>
                    Место
                </th>
                <th>
                    Цена
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ticket ticket in Model.Tickets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ticket.Row)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ticket.Seat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ticket.Price)
                    </td>
                    <td>
                        <a asp-controller="Tickets" asp-action="Buy" asp-route-id="@ticket.Id">Buy</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
