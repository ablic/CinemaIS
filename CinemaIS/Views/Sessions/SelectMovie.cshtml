@model List<CinemaIS.Models.Movie>

@{
    ViewData["Title"] = "Выбор фильма";
}

<form asp-action="SelectMovie">
    @foreach (var movie in Model)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" name="selectedMovieId" value="@movie.Id" id="@("movieRadio" + movie.Id)">
            <label class="form-check-label" for="@("movieRadio" + movie.Id)">
                @movie.Name
            </label>
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Далее" class="btn btn-primary" />
    </div>
</form>